@model ASP_MVC_0720_Ecommerce.Areas.SHOP.ViewModels.OrderViewModel

@{
    ViewBag.Title = "Main";
    Layout = "~/Areas/SHOP/Views/Shared/_ShopLayout.cshtml";
}

<!-- Testimonial section-->
<div class="py-3">
    <div class="container px-3 my-3">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-12 col-xl-12">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderList[0].Order_No)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderList[0].Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderList[0].Account)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderList[0].Receiver)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderList[0].Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderList[0].Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderList[0].Total)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.OrderList)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Order_No)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Account)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Receiver)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                            <td>
                                <a href="@Url.Action("OrderDetail")?OrderNo=@item.Order_No"
                                   class="btn btn-info">訂單明細</a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
